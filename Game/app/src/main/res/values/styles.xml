<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="cell">
        <item name="android:layout_width">@dimen/cell_side</item>
        <item name="android:layout_height">@dimen/cell_side</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">cell_clicked</item>
        <item name="android:textSize">@dimen/cell_text_size</item>
    </style>

    <style name="legend_cell">
        <item name="android:layout_width">@dimen/cell_side</item>
        <item name="android:layout_height">@dimen/cell_side</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">@dimen/cell_text_size</item>
    </style>

    <style name="box">
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
