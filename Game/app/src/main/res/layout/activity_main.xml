<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dom.game.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:rowCount="2">

        <LinearLayout
            style="@style/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Your fleet"
                android:textSize="20sp" />

            <GridLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:rowCount="3">

                <Button
                    android:id="@+id/yc11"

                    style="@style/cell"
                    android:background="#FFFFFFFF" />

                <Button
                    android:id="@+id/yc12"


                    style="@style/cell"
                    android:background="#FFFFFFFF" />

                <Button
                    android:id="@+id/yc13"


                    style="@style/cell"
                    android:background="@color/green" />

                <Button
                    android:id="@+id/yc21"

                    style="@style/cell"
                    android:background="@color/green" />

                <Button
                    android:id="@+id/yc22"

                    style="@style/cell"
                    android:background="#FFFFFFFF" />

                <Button
                    android:id="@+id/yc23"

                    style="@style/cell"
                    android:background="#FFFFFFFF" />

                <Button
                    android:id="@+id/yc31"

                    style="@style/cell"
                    android:background="@color/green" />

                <Button
                    android:id="@+id/yc32"

                    style="@style/cell"
                    android:background="#FFFFFFFF" />

                <Button
                    android:id="@+id/yc33"

                    style="@style/cell"
                    android:background="#FFFFFFFF" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Their fleet"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3">

                <Button
                    android:id="@+id/tc11"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc12"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc13"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc21"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc22"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc23"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc31"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc32"

                    style="@style/cell"
                    android:background="#FF888888" />

                <Button
                    android:id="@+id/tc33"

                    style="@style/cell"
                    android:background="#FF888888" />

            </GridLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Legend"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:orientation="horizontal">

                <Button
                    style="@style/legend_cell"
                    android:background="@color/red"
                    android:text="HIT" />

                <Button
                    style="@style/legend_cell"
                    android:background="@color/blue"
                    android:text="MISS" />

                <Button
                    style="@style/legend_cell"
                    android:background="#FFFFFFFF"
                    android:text="WATER" />

                <Button
                    style="@style/legend_cell"
                    android:background="@color/green"
                    android:text="SHIP" />

                <Button
                    style="@style/legend_cell"
                    android:background="#FF888888"
                    android:text="\?" />
            </GridLayout>


        </LinearLayout>

        <LinearLayout style="@style/box">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Control"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="reset_game"
                android:text="RESET" />
        </LinearLayout>

    </GridLayout>


</RelativeLayout>
