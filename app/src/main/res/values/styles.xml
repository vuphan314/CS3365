<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="StyleGridViewBoard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:verticalSpacing">@dimen/cells_gap_length</item>
        <item name="android:horizontalSpacing">@dimen/cells_gap_length</item>
        <item name="android:numColumns">@integer/board_side_cells_count</item>
        <item name="android:columnWidth">@dimen/board_cell_side_length</item>
        <item name="android:stretchMode">none</item>
    </style>

    <style name="StyleButtonBoardCell">
        <item name="android:layout_width">@dimen/board_cell_side_length</item>
        <item name="android:layout_height">@dimen/board_cell_side_length</item>
    </style>

    <style name="StyleButtonLegend">
        <item name="android:layout_width">wrap_content
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">30dp</item>
    </style>

</resources>
